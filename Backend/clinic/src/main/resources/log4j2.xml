<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <!-- Define log file paths -->
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>
        <Property name="LOG_FILE_PATH">logs/clinic-application</Property>
        <Property name="ERROR_LOG_FILE_PATH">logs/clinic-errors</Property>
        <Property name="CONTROLLER_LOG_FILE_PATH">logs/clinic-controllers</Property>
        <Property name="SERVICE_LOG_FILE_PATH">logs/clinic-services</Property>
    </Properties>

    <Appenders>
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
        </Console>

        <!-- Main Application Log File -->
        <RollingFile name="FileAppender" fileName="${LOG_FILE_PATH}.log"
                     filePattern="${LOG_FILE_PATH}-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

        <!-- Error Log File (Only Errors and Fatal) -->
        <RollingFile name="ErrorFileAppender" fileName="${ERROR_LOG_FILE_PATH}.log"
                     filePattern="${ERROR_LOG_FILE_PATH}-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

        <!-- Controller Log File -->
        <RollingFile name="ControllerFileAppender" fileName="${CONTROLLER_LOG_FILE_PATH}.log"
                     filePattern="${CONTROLLER_LOG_FILE_PATH}-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

        <!-- Service Log File -->
        <RollingFile name="ServiceFileAppender" fileName="${SERVICE_LOG_FILE_PATH}.log"
                     filePattern="${SERVICE_LOG_FILE_PATH}-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

        <!-- SQL Query Log File -->
        <RollingFile name="SqlFileAppender" fileName="logs/clinic-sql.log"
                     filePattern="logs/clinic-sql-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Application Controllers - TRACE level for detailed request/response logging -->
        <Logger name="org.example.clinic.controller" level="TRACE" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="ControllerFileAppender"/>
            <AppenderRef ref="FileAppender"/>
        </Logger>

        <!-- Application Services - TRACE level for detailed business logic -->
        <Logger name="org.example.clinic.services" level="TRACE" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="ServiceFileAppender"/>
            <AppenderRef ref="FileAppender"/>
        </Logger>

        <!-- Application Repositories - DEBUG level for database operations -->
        <Logger name="org.example.clinic.repo" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
        </Logger>

        <!-- Security - DEBUG level for authentication/authorization -->
        <Logger name="org.example.clinic.security" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
        </Logger>

        <!-- Exception Handler - ERROR level -->
        <Logger name="org.example.clinic.exception" level="ERROR" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="ErrorFileAppender"/>
            <AppenderRef ref="FileAppender"/>
        </Logger>

        <!-- Hibernate SQL Queries - DEBUG level -->
        <Logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
            <AppenderRef ref="SqlFileAppender"/>
            <AppenderRef ref="FileAppender"/>
        </Logger>

        <!-- Hibernate Query Parameters - TRACE level -->
        <Logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE" additivity="false">
            <AppenderRef ref="SqlFileAppender"/>
            <AppenderRef ref="FileAppender"/>
        </Logger>

        <!-- Spring Framework - WARN level to reduce noise -->
        <Logger name="org.springframework" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
        </Logger>

        <!-- Spring Security - INFO level -->
        <Logger name="org.springframework.security" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
        </Logger>

        <!-- Hibernate - WARN level to reduce noise -->
        <Logger name="org.hibernate" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
        </Logger>

        <!-- Root Logger -->
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="ErrorFileAppender"/>
        </Root>
    </Loggers>
</Configuration>
